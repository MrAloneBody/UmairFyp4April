<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F4E2E2"
    app:cardUseCompatPadding="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout

        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:stretchColumns="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow>
            <!--for payer name-->
            <TextView
                android:id="@+id/Batsman_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:hint="name"
                android:padding="5dp"
                android:textColor="#000">

            </TextView>

            <!--For Score of player-->

            <TextView
                android:id="@+id/Batsman_score"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:hint="Score"
                android:padding="5dp"
                android:textColor="#000">

            </TextView>

            <!--For balls  faced by player-->

            <TextView
                android:id="@+id/Batsman_bowls_faced"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:hint="Balls faced"
                android:padding="5dp"
                android:textColor="#000">

            </TextView>

            <!--For Strike rate of  player score/balls-->

            <TextView
                android:id="@+id/Batsman_sr"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:hint="SR"
                android:padding="5dp"
                android:textColor="#000">

            </TextView>


        </TableRow>

        <TableRow>

            <!--For Dismissal-->

            <TextView
                android:id="@+id/Dismissal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Dismissal"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000">

            </TextView>

        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>